#!/bin/bash

# Reset PATH when reloading
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

export DOTTFILES="$HOME/.dottfiles"
export PROJECTS="$HOME/Code"

# Append all bin directories to $PATH
export PATH="$PATH:$DOTTFILES/bin"
for directory in $(ls -d $DOTTFILES/**/bin); do
  export PATH="$PATH:$directory";
done

# Source all files ending in .bash
for includeable in $(ls $DOTTFILES/**/*.bash); do
  source $includeable;
done

alias reload!='. ~/.bash_profile'
